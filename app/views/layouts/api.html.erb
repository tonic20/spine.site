<!DOCTYPE html>
<html>
<head>
  <title>Spine</title>
  <%= stylesheet_link_tag    "docs" %>
  <%= javascript_include_tag "docs" %>
  <%= csrf_meta_tags %>
  <%= analytics_tag %>
</head>
<body class="<%= css_scope %>">
  <header id="header">
    <h1><a href="/">Spine</a></h1>
    <h2><%= yield(:title) %></h2>
    <%= flash_message %>
  </header>
  
  <article id="article">
  
    <nav id="nav">
      <h2><%= link_to "API", api_path %></h2>
      <ul>
        <li><%= link_to "Классы", api_path("classes") %></li>
        <li><%= link_to "Модели", api_path("models") %></li>
        <li><%= link_to "Контроллеры", api_path("controllers") %></li>
        <li><%= link_to "События", api_path("events") %></li>
        <li><%= link_to "Роутинг", api_path("routing") %></li>
      </ul>
      
      <h2>Дополнительно</h2>
      
      <ul>
        <li><%= link_to "Руководства", docs_path %></li>
      </ul>
      
      <div id="search">
        <%= form_tag api_path(:search), :method => :get do %>
          <input type="search" name="query" value="" placeholder="Поиск..." results="0">
        <%- end %>
      </div>
    </nav>
  
    <section id="section">    
      <%= yield %>
    </section>
    
  </article>
</body>
</html>